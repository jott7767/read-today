= form_for @story do |f|

  %p
    = f.label :title
    %br
    = f.text_field :title

  %p
    = f.label :body
    %br
    = f.text_area :body

  %p
    = f.label :air_date
    %br
    = f.date_field :air_date

  %p
    = f.label :video_url
    %br
    = f.text_field :embed_url

  %p
    =f.submit
