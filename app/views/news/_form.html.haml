= form_for @story do |f|
  .form-group
    %p
      = f.label :title
      %br
      = f.text_field :title, class: 'form-control'

    %p
      = f.label :body
      %br
      = f.text_area :body, class: 'form-control'

    %p
      = f.label :air_date
      %br
      = f.date_field :air_date, class: 'form-control'

    %p
      = f.label :video_url
      %br
      = f.text_field :embed_url, class: 'form-control'

    %p
      =f.submit, class: 'btn btn-primary'
